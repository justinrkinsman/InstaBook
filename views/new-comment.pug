extends layout 

block content 

    - let str = JSON.stringify(posts)
    - let parsedStr = JSON.parse(str)
    each post in parsedStr
        a(href='/') X
        fieldset 
            //user icon and user name div.somethingorother
                a(href='/)
                p #{post.author.username}
            h1 #{post.body}
            - let commentStr = JSON.stringify(comments)
            - let parsedComment = JSON.parse(commentStr)
            each comment in parsedComment 
                p #{comment.body}
    form(action='' method='POST' id='new-comment-form')
        div.form-group 
            label(for='comment') Enter Comment: 
            textarea#comment.form-control(type='text', maxlength=100 name='comment' )
        button.btn.btn-primary(type='submit' ) Submit
        a(href=`/`)
                p Cancel
    if errors 
        ul 
            for error in errors 
                li!= error.msg